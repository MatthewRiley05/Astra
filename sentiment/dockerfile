FROM python:3.11-slim

# System dependencies (keep minimal). Some analyzers may parse HTML; add curl for diagnostics.
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Python deps
COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# Apply patch to fix asset-sentiment-analyzer Google search bug
COPY fix_websearch.py ./
RUN python fix_websearch.py && rm fix_websearch.py

# App code
COPY app.py ./

EXPOSE 5501
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "5501"]
